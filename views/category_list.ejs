<%- include('../views/header.ejs') %>

  <h1 class="center">Our categories</h1>
  <hr>
  <% if (categorys.length) { %>
    <% categorys.forEach(category => { %>
      <div>
        <a href="<%= category.url %>">
          <strong><%= category.name %></strong>
        </a>
      </div>
      <div><%= category.description %> </>
      <hr>
    <% }); %>
      <% } else { %>
        No category! <a href="/category/create">Add one!</a>
        <% } %>

      <%- include('../views/footer.ejs') %>